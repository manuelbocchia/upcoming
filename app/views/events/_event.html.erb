
<div class="card" style="width: 10rem;">
  <img src="https://api.lorem.space/image?w=100&h=110" class="card-img-top" alt="random generated image">
  <div class="card-body">
    <h5 class="card-title"><%= @event.name %></h5>
    <p class="card-text">This is in <%= @event.location %> on the <%= @event.date %>. <br> Event created by <%= @event.creator.email %> </p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>

<div id="attendees">
  <% if @event.attendees.empty? %>
    <h3> No one's confirmed yet... be the first! </h3>
  <% else %>
    <% @event.attendees.each do |attendee| %>
      <p>
        <h3> <%= attendee.email %> is attending! 
        <%= link_to "Go to user.", attendee %>
        </h3>
      </p>
    <% end %>
  <% end %>
</div>

<h2>Want to attend?</h2>

<%= button_to 'Attend', event_attendings_path(@event), method: :post, confirm: 'really?' %>